<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
	<services> 
		<service id="olla.operation" class="Olla\Core\Core\Core" >
			<argument type="service" id="service_container" />
			<argument type="service" id="olla.metadata" />
			<argument type="service" id="olla.firewall" />
			<argument type="service" id="olla.data_converter" />
			<argument type="service" id="olla.theme" />
		</service>
		<service id="olla.data_converter" class="Olla\Core\Core\Response" >
			<argument type="service" id="service_container" />
		</service>
		<service id="olla.firewall" class="Olla\Core\Core\Firewall" >
			<argument type="service" id="service_container" />
		</service>
	</services>
</container>